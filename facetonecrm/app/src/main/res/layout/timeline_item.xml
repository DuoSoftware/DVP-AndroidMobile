<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp">
        <View
            android:id="@+id/view"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/customGrey"
            android:layout_gravity="center"

            />

        <ImageView
            android:id="@+id/iv_timeline_circle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/timelinesms"
            android:layout_gravity="center|top"
            android:layout_marginTop="26dp"
            />

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_timeline_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FROM +1115645666"
                android:textColor="@color/customLightBlue"
                android:layout_gravity="left"/>
            <TextView
                android:id="@+id/tv_timeline_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TO +1115645666"
                android:textColor="@color/customDarkYellow"
                android:gravity="right"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_timeline_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loream fhbhd sdvgf gfisdg visrg  iri gvifg isfvbi  isgbi iigjbis ibsgf jjhbigib"/>
        <TextView
            android:id="@+id/tv_timeline_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11 hours ago via FB"
            android:textColor="@color/customLightBlue"
            android:layout_gravity="right"/>
    </LinearLayout>

</LinearLayout>